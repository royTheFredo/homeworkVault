#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
	double averageDailyBalance;
	double netBalance;
	int d1; //number of days in the billing cycle
	int d2; //number of days payment made before billing cycle
	double payment;
	double interest;
	double interestRatePerMonth;

	cout << "Please enter the net balance on the account:" << endl;
	cin >> netBalance;
	cout << "Please enter the payment amount:" << endl;
	cin >> payment;
	cout << "Please enter the total number of days in the billing cycle:" << endl;
	cin >> d1;
	cout << "Please enter the number of days left in the billing cycle when payment was made:" << endl;
	cin >> d2;
	cout << "Please enter the interest rate per month for the account:" << endl;
	cin >> interestRatePerMonth;


	//inputs netBalance, payment, d1, d2, and interest rate per month
	averageDailyBalance = (netBalance*d1 - payment*d2) / d1;

	interest = averageDailyBalance*interestRatePerMonth;

	
	//outputs interest to 2 decimals
	cout << fixed << showpoint;
	cout << "Interest on the account: $" << setprecision(2) << interest << endl;
	system("pause");

	return 0;
}
